<form>
  <div class="form-group">
    <label>{{localize "l5r4.ui.common.name"}}</label>
    <input type="text" name="itemName" placeholder="{{localize 'l5r4.ui.sheets.addItem'}}">
  </div>
  <div class="form-group">
    <label>{{localize "l5r4.ui.common.type"}}</label>
    <select name="itemType">
      {{#if showCharacterItems}}
        <optgroup label="{{localize 'l5r4.ui.sheets.character'}}">
          <option value="advantage">{{localize "l5r4.ui.sheets.advantage"}}</option>
          <option value="disadvantage">{{localize "l5r4.ui.sheets.disadvantage"}}</option>
        </optgroup>
        <optgroup label="{{localize 'l5r4.ui.sheets.abilities'}}">
          <option value="skill">{{localize "l5r4.ui.sheets.skill"}}</option>
          <option value="spell">{{localize "l5r4.ui.sheets.spell"}}</option>
          <option value="technique">{{localize "l5r4.ui.sheets.technique"}}</option>
          <option value="kata">{{localize "l5r4.ui.sheets.kata"}}</option>
          <option value="kiho">{{localize "l5r4.ui.sheets.kiho"}}</option>
          <option value="tattoo">{{localize "l5r4.ui.sheets.tattoo"}}</option>
        </optgroup>
      {{/if}}
      <optgroup label="{{localize 'l5r4.ui.sheets.equipment'}}">
        <option value="weapon" selected="">{{localize "l5r4.ui.sheets.weapon"}}</option>
        <option value="armor">{{localize "l5r4.ui.sheets.armor"}}</option>
        <option value="commonItem">{{localize "l5r4.ui.sheets.item"}}</option>
      </optgroup>
    </select>
  </div>
</form>
