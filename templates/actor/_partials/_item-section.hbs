<section class="flexcol -gap-sm">
  <div class="flexrow -gap-sm section-title">
    <h4 class="title">{{localize "l5r4.ui.sheets.items"}}</h4>
    <a class="button inline-control icon" data-action="item-create" data-type="commonItem" title="{{localize "l5r4.ui.sheets.addItem"}}">
      <i class="fas fa-plus"></i>
    </a>
    {{> "systems/l5r4/templates/actor/_partials/_expand.hbs"}}
  </div>
  {{#if items.length}}
    <section class="item-list -equipment -header" data-scope="items">
      <div class="item">
        <a class="item-sort-by" data-sortby="name">{{localize "l5r4.ui.common.name"}}</a>
      </div>
    </section>
    <section class="item-list -equipment">
      {{#each items as |item id|}}
        {{> "systems/l5r4/templates/cards/commonItem.hbs"
            system=item.system
            inSheet=true
            docId=item.id}}
      {{/each}}
    </section>
  {{/if}}
</section>
