    <!-- Fire ring -->
    <h4 class="ring-name ring-name-fire">{{localize "l5r4.mechanics.rings.fire"}}</h4>
    <h4 class="ring-rank ring-rank-fire">{{system.rings.fire}}</h4>
    <div class="fire-ring">
      <div>
        <a class="ring-roll" data-action="roll-ring" data-ring-rank="{{system.rings.fire}}" data-ring-name="{{localize "l5r4.mechanics.rings.fire"}}" data-system-ring="fire">
          <img src="{{iconPath 'fire.png'}}" title="{{localize "l5r4.ui.rolls.ringRoll"}}" class="fire-ring-img" />
        </a>
      </div>
    </div>
    <div class="trait trait-agility">
      <a class="trait-roll" data-action="roll-trait" data-trait-rank="{{system.traits.agi}}" data-trait-name="{{localize "l5r4.mechanics.traits.agi"}}">
