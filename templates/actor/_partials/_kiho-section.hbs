<section class="flexcol -gap-sm">
  <div class="flexrow -gap-sm section-title">
    <h4 class="title">{{localize "l5r4.ui.sheets.kiho"}}</h4>
    <a class="button inline-control icon" data-action="item-create" data-type="kiho" title="{{localize "l5r4.ui.sheets.addKiho"}}">
      <i class="fas fa-plus"></i>
    </a>
    {{> "systems/l5r4/templates/actor/_partials/_expand.hbs"}}
  </div>
  {{#if kihos.length}}
    <section class="item-list -kata -header" data-scope="kihos">
      <div class="item">
        <a class="item-sort-by" data-sortby="name">{{localize "l5r4.ui.common.name"}}</a>
        <a class="item-sort-by" data-sortby="ring">{{localize "l5r4.ui.common.ring"}}</a>
        <a class="item-sort-by" data-sortby="mastery">{{localize "l5r4.ui.common.mastery"}}</a>
        <a class="item-sort-by" data-sortby="type">{{localize "l5r4.ui.common.type"}}</a>
        <span></span>
      </div>
    </section>
    <section class="item-list -kiho">
      {{#each kihos as |kiho id|}}
        {{> "systems/l5r4/templates/cards/kiho.hbs" system=kiho.system inSheet=true docId=kiho.id}}
      {{/each}}
    </section>
  {{/if}}
</section>
