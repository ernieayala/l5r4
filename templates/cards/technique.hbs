<div class="item -{{type}}{{#if system.description}} -expandable{{/if}}"
  data-item-id="{{coalesce docId this.id _id}}"
  data-document-id="{{coalesce docId this.id _id}}"
  data-document-type="Item"
  draggable="{{@root.editable}}">
  <h4 class="flexrow -gap-sm title">
    {{#if inSheet}}
      <a data-action="item-chat" title="{{localize "l5r4.ui.common.toChat"}}">{{name}}</a>
    {{else}}
      {{name}}
    {{/if}}
  </h4>
  {{#if inSheet}}
    {{#unless system.shugenja}}
      <div><strong>{{localize "l5r4.character.skills.properties.rank"}}:</strong> {{system.rank}}</div>
      <span></span>
      <span></span>
    {{/unless}}
    {{#if system.shugenja}}
      <div><strong>{{localize "l5r4.magic.spells.affinity"}}:</strong> {{localize (concat "l5r4.mechanics.rings." system.affinity)}}</div>
      <div><strong>{{localize "l5r4.magic.spells.deficiency"}}:</strong> {{localize (concat "l5r4.mechanics.rings." system.deficiency)}}</div>
      <span></span>
    {{/if}}
    {{> "systems/l5r4/templates/cards/_partials/_expand.hbs"}}
    {{#if system.description}}
      <div class="expanded-text">
        <p>{{{system.description}}}</p>
      </div>
    {{/if}}
  {{/if}}
  {{#unless inSheet}}
    {{#unless system.shugenja}}
      <p><strong>{{localize "l5r4.character.skills.properties.rank"}}:</strong> {{system.rank}}</p>
    {{/unless}}
    {{#if system.shugenja}}
      <p><strong>{{localize "l5r4.magic.spells.affinity"}}:</strong> {{localize (concat "l5r4.mechanics.rings." system.affinity)}}</p>
      <p><strong>{{localize "l5r4.magic.spells.deficiency"}}:</strong> {{localize (concat "l5r4.mechanics.rings." system.deficiency)}}</p>
    {{/if}}
    {{#if system.specialRules}}
      <h5>{{localize "l5r4.ui.sheets.rulesSummary"}}</h5>
      <p>
        {{{system.specialRules}}}
      </p>
    {{/if}}
    {{#if system.description}}
      <h5>{{localize "l5r4.ui.sheets.description"}}</h5>
      <p>
        {{{system.description}}}
      </p>
    {{/if}}
  {{/unless}}
</div>
